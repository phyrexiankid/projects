            <string>///Main timer
if with_pause=1 global.pause = 1;

surface_free(count_surf);
ds_list_delete(Main.surface_list,ds_list_find_index(Main.surface_list,count_surf));
count_surf = surface_create(cen,cen);
ds_list_add(Main.surface_list,count_surf);



if count=0 and progress=-1 { //текст вместо нуля
    color_inn = make_color_rgb(186,32,47);
    count=text;
}
surface_set_target(count_surf);
draw_set_font(font);
draw_set_valign(fa_middle);
draw_set_halign(fa_center);
scr_draw_text_shadow(cen/2,cen/2,count,3,color_inn,color_out)
surface_reset_target();
if count=text and progress=-1 { //текст вместо нуля
    count=0;
}
count+=1*progress;
if progress=-1 {
    if count&gt;=target_count alarm[0]=timer;
    else alarm[final_timer]=timer;
} else {
    if count&lt;=target_count alarm[0]=timer;
    else alarm[final_timer]=timer;
}

size=0.5;
alpha=0;
phase=0;




</string>
