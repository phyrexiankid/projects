          <argument>
            <kind>1</kind>
            <string>if surface_exists(count_surf) {
    size+=size_shift;
    var scl=1.3;
    draw_surface_ext(count_surf,(view_xview[0]+view_wview[0]/2)-(cen/2*size*scl),(view_yview[0]+view_hview[0]/2)-(cen/2*size*scl),size*scl,size*scl,0,noone,alpha);
    
    if phase=0 {//альфа растет
        alpha+=alpha_shift;
        if alpha&gt;=1 {alpha=1;phase=1;}
    } else if phase=1 {//середина
        if alarm[0]&lt;=timer*alpha_shift phase=2;
    } else if phase=2 {//альфа уменьшается
        alpha-=alpha_shift;
    }
    
} else {
    count_surf = surface_create(cen,cen);
    ds_list_add(Main.surface_list,count_surf);
    surface_set_target(count_surf);
    draw_set_font(font);
    draw_set_valign(fa_middle);
    draw_set_halign(fa_center);
    scr_draw_text_shadow(cen/2,cen/2,count,2,color_inn,color_out)
    surface_reset_target();
}

if final_timer=1 {
    //номер уровня
    draw_set_font(font_42)
    draw_set_valign(fa_top);
    draw_set_halign(fa_center);
    draw_set_color(make_color_rgb(186,32,47));
    draw_text(room_width/2,6,mtf.l_other[4]+string(Main.level_played));
}
</string>
